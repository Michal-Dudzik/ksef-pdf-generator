{
  "name": "ksef-pdf-generator",
  "version": "0.0.39",
  "type": "module",
  "description": "CLI tool for generating PDF visualizations of KSeF invoices and UPO documents from XML files",
  "private": true,
  "bin": {
    "ksef-pdf-generator": "./dist/cli.cjs"
  },
  "scripts": {
    "build": "npm run bundle && npm run copy-worker",
    "bundle": "esbuild src/cli/index.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/cli.cjs --external:fsevents --minify --tree-shaking=true --keep-names",
    "copy-worker": "node -e \"require('fs').copyFileSync('node_modules/jsdom/lib/jsdom/living/xhr/xhr-sync-worker.js', 'dist/xhr-sync-worker.js')\"",
    "cli": "node dist/cli.cjs",
    "setup": "npm install && npm run build",
    "clean": "rimraf node_modules dist build .idea .vscode",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node tests/run-all.mjs",
    "analyze-bundle": "node scripts/analyze-bundle.mjs"
  },
  "keywords": [
    "ksef",
    "pdf",
    "invoice",
    "upo",
    "generator",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.19.0",
    "@types/pdfmake": "^0.2.11",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.27.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "jsdom": "^26.1.0",
    "pdfmake": "^0.2.20",
    "xml-js": "^1.6.11"
  }
}
